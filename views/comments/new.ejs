<% include ../partials/header.ejs %>
<div class="ui middle aligned center aligned grid">
    <div class="six wide column">
        <h1 class="ui header">
            <div class="content">
                    Add New Comment to <%= meal.name %>
            </div>
        </h1>

        <form class="ui form" action="/meals/<%= meal._id %>/comments" method="POST">
            <div class="ui stacked segment">
                <div class="field">
                        <input name="comment[text]" placeholder="Comment" type="text">
                    </div>
                    <div class="field">
                        <input name="comment[author]" placeholder="Author" type="text">
                    </div>
                <button class="ui fluid large blue submit button" type="submit">Submit Comment</button>
            </div>
        </form> 
    </div>
</div>


<a href="/meals">Go Back</a>

