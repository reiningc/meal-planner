<% include ../partials/header.ejs %>
<div class="ui middle aligned center aligned grid">
    <div class="six wide column">
        <h1 class="ui header">
            <div class="content">
                    Edit <%= meal.name %>
            </div>
        </h1>

        <form class="ui form" action="/meals/<%= meal._id %>?_method=PUT" method="POST">
            <div class="ui stacked segment">
                <div class="field">
                        <input name="meal[name]" value="<%= meal.name %>" type="text">
                    </div>
                    <div class="field">
                        <input name="meal[image]" value="<%= meal.image %>" type="text">
                    </div>
                    <div class="field">
                        <input name="meal[ingredients]" value="<%= meal.ingredients %>" type="text">
                    </div>
                    <div class="field">
                        <input name="meal[recipe]" value="<%= meal.recipe %>" type="text">
                    </div>
                <button class="ui fluid large blue submit button" type="submit">Submit Meal</button>
            </div>
        </form> 
    </div>
</div>


<a href="/meals/<%= meal._id %>">Go Back</a>

<% include ../partials/footer %>