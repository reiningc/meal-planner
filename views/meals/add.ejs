<% include ../partials/header.ejs %>
<div class="ui middle aligned center aligned grid">
    <div class="six wide column">
        <h1 class="ui header">
            <div class="content">
                    Add <%= meal.name %> to Meal Plan
            </div>
        </h1>

        <form class="ui form" action="/meals/<%= meal._id %>/add?_method=PUT" method="POST">
            <div class="ui stacked segment">
                <div class="field">
                    <label for="plan-select">Choose a plan:</label>
                    <select id="plan-select">
                        <% user.plans.forEach(function(plan){ %>
                            <option value="<%= plan._id %>"><%= plan.name %></option>
                        <% }); %>
                    </select>
                </div>
                <button class="ui fluid large blue submit button" type="submit">Add Meal</button>
            </div>
        </form> 
    </div>
</div>


<a href="/plans">Go Back</a>

<% include ../partials/footer %>